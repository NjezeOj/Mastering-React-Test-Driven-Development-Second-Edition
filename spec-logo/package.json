{
  "name": "spec-logo",
  "version": "1.0.0",
  "description": "A Logo interpreter with built-in specifications",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "webpack",
    "format": "prettier --write {src,test}/*",
    "lint": "eslint {src,test}/**/*",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "example.com"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.18.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2",
    "redux": "^4.2.0",
    "redux-saga": "^1.1.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.2",
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "babel-loader": "^8.2.5",
    "eslint": "^8.21.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "expect-redux": "^5.0.3",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "prettier": {
    "printWidth": 54
  },
  "jest": {
    "testEnvironment": "jsdom",
    "globals": {
